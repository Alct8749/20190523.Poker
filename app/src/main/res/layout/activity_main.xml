<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#060"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/card1"
        android:layout_width = "100dp"
        android:layout_height = "150dp"
        app:layout_constraintBottom_toTopOf="@id/card11"
        app:layout_constraintEnd_toStartOf="@id/card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card11"
        android:layout_width = "100dp"
        android:layout_height = "150dp"
        app:layout_constraintBottom_toTopOf="@id/card111"
        app:layout_constraintEnd_toStartOf="@id/card22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1" />

    <ImageView
        android:id="@+id/card111"
        android:layout_width = "100dp"
        android:layout_height = "150dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_shuffle"
        app:layout_constraintEnd_toEndOf="@id/card11"
        app:layout_constraintStart_toStartOf="@id/card11"
        app:layout_constraintTop_toBottomOf="@id/card11" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width = "100dp"
        android:layout_height = "150dp"
        app:layout_constraintBottom_toTopOf="@id/card22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card22"
        android:layout_width = "100dp"
        android:layout_height = "150dp"
        app:layout_constraintBottom_toTopOf="@id/card111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card11"
        app:layout_constraintTop_toBottomOf="@id/card2" />
    <Button
        android:id="@+id/btn_shuffle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Card Shuufle"
        app:layout_constraintTop_toBottomOf="@id/card111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/jokbo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="wating..."
        app:layout_constraintTop_toBottomOf="@id/btn_shuffle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>